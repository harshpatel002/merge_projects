        var harshx = 0;
        document.getElementById("xcount").innerHTML = harshx;
        var harshy = 0;
        document.getElementById("ycount").innerHTML = harshy;
        var harshdraw = 0;
        document.getElementById("drawcount").innerHTML = harshdraw;


        flagharsh = 0;
        function harshnorepeat(harsh) {
            if (flagharsh == 0 && harsh.innerHTML == "") {
                harsh.innerHTML = "x";
                harsh.style.color = "red";
                flagharsh = 1;
            }
            else if (harsh.innerHTML == "") {
                harsh.innerHTML = "o";
                harsh.style.color = "green";
                flagharsh = 0;
            }
        }

