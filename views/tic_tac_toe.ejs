        </table><br>
        <table id="count">
            <tr>
                <td colspan="2" style="color: bisque;width: 10px; height: auto; font-size: 50px">Count</td>
            </tr>
            <tr>
                <td style="color: bisque; width: 10px; height: auto;font-size: 40px">x</td>
                <td style="color: bisque; width: 10px; height: auto;font-size: 40px" id="xcount"></td>
            </tr>
            <tr>
                <td style="color: bisque; width: 10px; height: auto;font-size: 40px">o</td>
                <td style="color: bisque; width: 10px; height: auto;font-size: 40px" id="ycount"></td>
            </tr>
            <tr>
                <td style="color: bisque; width: 10px; height: auto;font-size: 40px">Draw</td>
                <td style="color: bisque; width: 10px; height: auto;font-size: 40px" id="drawcount"></td>
            </tr>
        </table>
    </div>



